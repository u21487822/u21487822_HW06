@model u21487822_HW06.Models.product

@{ ViewBag.Title = "Delete"; }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Close</button>
    <h3 class="modal-title">Delete Product</h3>
</div>

<div class="text-center">
    <h3>You sure you want to delete this?</h3>
</div>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_name)
        </dd>

        <dt>
            @Html.DisplayName("Year")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.model_year)
        </dd>

        <dt>
            @Html.DisplayName("Price")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.list_price)
        </dd>

        <dt>
            @Html.DisplayName("Brand")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brand.brand_name)
        </dd>

        <dt>
            @Html.DisplayName("Category")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category.category_name)
        </dd>

    </dl>

    <div class="modal-footer">
        @using (Html.BeginForm("DeleteConfirmed", "products", "FormMethod.Post"))
         {
    @Html.Hidden("id", Model.product_id)
                    <input class="btn btn-success" type="submit" value="Delete" />
                                    <button class="btn btn-danger" data-dismiss="modal">Close</button>
         }


    </div>
    }
</div>
